{{! Post body is no longer truncated }}
<div class="d-flex flex-column align-items-center container">
  {{#if postOwner}}
    <div class="d-flex justify-content-around col-6" id="edit-btn-group">
      <button class="btn btn-secondary" id="edit-post-btn">Edit post</button>
      <button class="btn btn-secondary" id="delete-post-btn">Delete post</button>
    </div>
  {{/if}}
  <div
    data-post-id="{{post.id}}"
    class="container card col-7 m-1 border-color:red border border-4"
    id="post">
    <div
      class="card-body d-flex flex-column justify-content-between align-items-center container"
    >
      <div class="d-flex justify-content-between container">
        <div class="d-flex flex-column">
          <h2 class="card-title h5">{{post.title}}</h2>
          <h3 class="card-subtitle text-muted h6">{{post.user.username}}</h3>
        </div>
      </div>
      <p class="card-text m-3">{{post.body}}</p>
      <form id="edit-post-form" class="d-flex flex-column col-10 d-none">
        <div class="form-group my-2">
          <label for="edit-post-title" class="text-muted">Edit post</label>
          <input
            type="text"
            class="form-control"
            id="edit-post-title"
            placeholder="Title"
            required
          />
        </div>
        <div class="form-group my-2">
          <textarea
            class="form-control"
            id="edit-post-body"
            rows="6"
            placeholder="Type your updated post here"
            required
          ></textarea>
        </div>
        <button type="submit" class="btn btn-secondary my-2">Reupload post</button>
      </form>
      <div
        id="comments-container"
        class="col-12 d-flex flex-column justify-content-center">
        {{#each post.comments as |comment|}}
          <div data-post-id="{{post.id}}" class="container card m-1">
            <div
              class="card-body d-flex flex-column justify-content-between container"
            >
              <div class="d-flex justify-content-between container">
                <div class="d-flex flex-column">
                  <h2 class="card-title h5">{{comment.title}}</h2>
                  <h3
                    class="card-subtitle text-muted h6"
                  >{{comment.user.username}}</h3>
                </div>

              </div>
              <p class="card-text m-3">{{comment.body}}</p>
            </div>
          </div>
        {{/each}}
        <button class="btn btn-secondary my-4" id="new-comment-btn">Write a new
          comment</button>
        <form
          id="new-comment-form"
          class="d-flex flex-column d-none col-11 border-success card p-3 m-2">
          <div class="form-group my-2">
            <label for="post-title" class="text-muted">New comment</label>
            <textarea
              class="form-control"
              id="comment-body"
              rows="6"
              placeholder="Type your comment here"
              required
            ></textarea>
          </div>
          <button type="submit" class="btn btn-secondary my-2">Post comment</button>
        </form>
      </div>
    </div>
  </div>
</div>
<script src="../js/editPost.js"></script>